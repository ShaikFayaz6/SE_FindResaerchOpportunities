</head>
<body>
  <em class='bx bxs-user-voice' id="startVoiceNav"></em>
    <div class="content">
        <header>
            <h1  data-translate="true" >Feel free to drop us your feedback.</h1>
            <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/1457119/feedback-form-template.svg" 
                alt="A woman is sitting on the floor and working on a laptop (vector illustration)" />
        </header>
        <main mv-app="feedbackForm"
              mv-storage="#data"
              mv-source="#source"
              mv-mode="read">
            <form mv-multiple="feedback" action="/feedback" method="post">
                <label>
                    <h2  data-translate="true" >How satisfied are you overall with the support of your Delivery Partner?</h2>
                    <div class="tickmarks">
                        <span mv-multiple="tickmark"
                              mv-value="0 .. 10"
                              mv-storage="none"
                              class="[if($this = score, highlight)]"
                              mv-action="set(score, $this)"></span>
                    </div> 
                    <label for="score" class="sr-only" >your feedback here</label>
                    <input property="score"
                            id="score"
                            name="score"
                            type="range" max="10"
                            style="--score: [score * 10]%" />
                    <div class="legend">
                        <span  data-translate="true" mv-action="set(score, 0)">Not at all likely</span>
                        <span data-translate="true"  mv-action="set(score, 10)">Extremely likely</span>
                    </div>
                </label>
                

                <label for="feedback" class="sr-only"> feedback </label>
                <textarea property="comment"
                            name="feedback"
                            id="feedback"
                            cols="30" rows="10"
                            data-translate="true" 
                            aria-label="Please tell us your reasons for giving this score here..."
                            placeholder="Please tell us your reasons for giving this score here..."></textarea>
                
                <div class="mv-bar">
                    <button  data-translate="true" type="submit" class="mv-save">
                        Send Feedback
                    </button>
                </div>

            </form>
        </main>
    </div>
</body>

<script>
const body = document.querySelector('body');

document.addEventListener("DOMContentLoaded", () => {
  fetch('/get-theme')
    .then(response => response.json())
    .then(data => {
      const theme = data.theme;
      if (theme === 'dark-theme') {
        body.classList.add('dark-theme');
      } else {
        body.classList.add('light-theme');
      }
      document.documentElement.style.setProperty('--home-background', getComputedStyle(body).getPropertyValue('--home-background'));
    })
    .catch(error => console.error('Error fetching theme:', error));
});

</script>
<script type="module" src="VoiceNavigation.mjs"></script>
<script type="module" src="translation.mjs"></script>
<script src="languages.js" ></script>

</html>
